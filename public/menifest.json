{
    "manifest_version": 3,
    "name": "LookupAI",
    "version": "1.0",
    "permissions": ["activeTab", "contextMenus", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon1.png",
        "48": "icons/icon2.png"
      }
    }
  }